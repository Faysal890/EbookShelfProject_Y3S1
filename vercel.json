{
  "version": 2,
  "builds": [
    {
      "src": "ebookshelf/wsgi.py",
      "use": "@vercel/python",
      "config": { "runtime": "python3.9" }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/staticfiles/$1" },
    { "src": "/(.*)", "dest": "ebookshelf/wsgi.py" }
  ],
  "buildCommand": "python3 manage.py collectstatic --noinput"
}
